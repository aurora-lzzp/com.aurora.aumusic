            <Button x:Name="StopButton" Click="StopButton_Click" ToolTipService.ToolTip="Stop" Style="{ThemeResource QuickControlButtonStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.RightOf="NextButton" Margin="32,96,0,0" Width="36" Height="36">
                <Button.Content>
                    <SymbolIcon x:Name="StopSymbol" Symbol="Stop" />
                </Button.Content>
            </Button>
            <Button x:Name="ListButton" Click="ListButton_Click" ToolTipService.ToolTip="Now-Playing List" Style="{ThemeResource QuickControlButtonStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.RightOf="StopButton" Margin="32,96,0,0" Width="36" Height="36">
                <SymbolIcon x:Name="ListSymbol" Symbol="List" />
            </Button>
            <Button x:Name="MoreDetailsButton" ToolTipService.ToolTip="Detail" Style="{ThemeResource QuickControlButtonStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.RightOf="ListButton" Margin="32,96,0,0" Width="36" Height="36">
                <SymbolIcon x:Name="MoreSymbol" Symbol="More" />
                <Button.Flyout>
                    <Flyout>
                        <TextBlock Text="Caonima" />
                    </Flyout>
                </Button.Flyout>
            </Button>
            <ToggleButton x:Name="ShuffleButton" Click="ShuffleButton_Click" ToolTipService.ToolTip="Shuffle" Style="{ThemeResource QuickToggleStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.LeftOf="PreviousButton" Margin="0,96,32,0" Width="36" Height="36">
                <ToggleButton.Content>
                    <SymbolIcon x:Name="ShuffleSymbol" Symbol="Shuffle" />
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton x:Name="RepeatButton" Click="RepeatButton_Click" ToolTipService.ToolTip="Repeat" Style="{ThemeResource QuickToggleStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.LeftOf="ShuffleButton" Margin="0,96,32,0" Width="36" Height="36">
                <ToggleButton.Content>
                    <SymbolIcon x:Name="RepeatSymbol" Symbol="RepeatAll" />
                </ToggleButton.Content>
            </ToggleButton>
            <Button x:Name="VolumeButton" ToolTipService.ToolTip="Volume" Style="{ThemeResource QuickControlButtonStyle}" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" RelativePanel.LeftOf="RepeatButton" Margin="0,96,32,0" Width="36" Height="36">
                <Button.Content>
                    <SymbolIcon x:Name="Volume" Symbol="Volume" />
                </Button.Content>
                <Button.Flyout>
                    <Flyout x:Name="VolumeFlyout" FlyoutPresenterStyle="{StaticResource FlyoutStyle}" Closed="VolumeFlyout_Closed">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="FastMuteButton" Click="FastMuteButton_Click" Width="36" Height="36" VerticalAlignment="Center" Margin="8,0,0,0" Style="{StaticResource QuickControlButtonStyle}">
                                <Button.Content>
                                    <SymbolIcon>
                                        <SymbolIcon.Symbol>Mute</SymbolIcon.Symbol>
                                    </SymbolIcon>
                                </Button.Content>
                            </Button>
                            <Slider x:Name="VolumeSlider" HorizontalAlignment="Center" Minimum="0" Maximum="100" Loaded="VolumeSlider_Loaded" IsThumbToolTipEnabled="False" Margin="8,4,0,0" VerticalAlignment="Center" Width="256"/>
                            <TextBlock x:Name="VolumeValue" HorizontalAlignment="Center" Margin="12" Style="{StaticResource MediaTextBlockStyle}" Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}" Text="{Binding Value, ElementName=VolumeSlider}" VerticalAlignment="Center" Width="24"/>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Slider x:Name="PositionSlider" Loaded="PositionSlider_Loaded" Foreground="{Binding ElementName=PlayPauseButton, Path=Background}" Style="{ThemeResource MediaSliderStyle}" ThumbToolTipValueConverter="{StaticResource SliderConverter}" Margin="-64,64,-64,0" RelativePanel.AlignLeftWith="VolumeButton" RelativePanel.AlignRightWith="MoreDetailsButton" RelativePanel.Below="PlayPauseButton" RelativePanel.AlignHorizontalCenterWithPanel="True" />
            <TextBlock x:Name="PastTimeBlock" RelativePanel.LeftOf="VolumeButton" RelativePanel.AlignVerticalCenterWith="PositionSlider" Margin="0,38,78,0" Style="{ThemeResource BodyTextBlockStyle}" Text="{Binding ElementName=PositionSlider, Path=Value, Converter={StaticResource SliderConverter}}" />
            <TextBlock x:Name="TotalTimeBlock" RelativePanel.RightOf="MoreDetailsButton" RelativePanel.AlignVerticalCenterWith="PositionSlider" Margin="78,38,0,0" Style="{ThemeResource BodyTextBlockStyle}" Text="0:00" />
        </RelativePanel>
        
        <AppBarButton x:Name="DeDetailsButton"  Style="{ThemeResource AppBarButtonStyleFullDark}" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Click="DeDetailsButton_Click" >
            <AppBarButton.Icon>
                <SymbolIcon x:Name="DeDetailsSymbol" Symbol="BackToWindow" />
            </AppBarButton.Icon>
        </AppBarButton>
    </RelativePanel>
</Page>
