<Page
    x:Class="com.aurora.aumusic.AlbumFlowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:com.aurora.aumusic">
    <!--必须定义local 才能在下面引用自定义布局-->

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="LightThemeDictionary.xaml" x:Key="Light"/>
                <ResourceDictionary Source="DarkThemeDictionary.xaml" x:Key="Dark"/>
            </ResourceDictionary.ThemeDictionaries>
            <DataTemplate x:Name="AlbumFlowTemplate" x:DataType="local:AlbumItem">
                <RelativePanel PointerEntered="RelativePanel_PointerEntered" RequestedTheme="Light" PointerExited="RelativePanel_PointerExited" >
                    <Viewbox x:Name="AlbumViewBox" Stretch="Uniform" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" >
                        <Image x:Name="AlbumArtWork" Source="{x:Bind AlbumArtWork}" Margin="0" />
                    </Viewbox>
                    <ScrollViewer x:Name="AlbumViewer" ScrollViewer.HorizontalScrollMode="Disabled" ScrollViewer.VerticalScrollMode="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              VerticalAlignment="Bottom" Margin="0,-20,0,0" Height="64" HorizontalAlignment="Stretch" RelativePanel.Below="AlbumViewBox" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                            <Grid Height="40" Margin="0,24,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" x:Name="AlbumName" Style="{ThemeResource TextBlockButtonStyle}" Content="{x:Bind AlbumName}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" x:Name="AlbumArtists" Text="{x:Bind Artists[0]}" FontSize="16" Margin="0,0,4,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="1" x:Name="AlbumSongs" Text="{x:Bind Songs.Count}" VerticalAlignment="Center" Margin="4,0,0,0" />
                                <Button Grid.Row="1" BorderThickness="0" Style="{ThemeResource TextBlockButtonStyle}" Content="&#xE768;" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,4,0" Click="Button_Click" />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </RelativePanel>
            </DataTemplate>
            <CollectionViewSource x:Name="AlbumFlowResources" />
        </ResourceDictionary>

    </Page.Resources>
    <RelativePanel Background="{ThemeResource SystemBackgroundAltHighBrush}" >
        
        <RelativePanel x:Name="MymusicSubPanel" Width="auto"  RelativePanel.AlignTopWithPanel="True"  RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="20,44,20,0" >
            <TextBlock x:Name="MusicTextBlock" Text="选择排列方式：" RelativePanel.AlignVerticalCenterWithPanel="True" />
            <ComboBox RelativePanel.RightOf="MusicTextBlock" RelativePanel.AlignVerticalCenterWithPanel="True" x:Name="MusicArrangeList" Width="120" FontSize="13.333" >
                <x:String>按专辑</x:String>
                <x:String>按表演者</x:String>
                <x:String>按名称</x:String>
                <x:String>按歌曲类型</x:String>
            </ComboBox>
            <Button x:Name="ChangePathButton" Style="{ThemeResource TextBlockButtonStyle}" Content="更改查找位置" FontSize="13.333" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>

        </RelativePanel>

        <Grid x:Name="MymusicSubGrid" Width="240" Height="auto" RelativePanel.Below="MymusicSubPanel" Margin="20,20,0,0" RelativePanel.AlignLeftWithPanel="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="0" Fill="Beige" Width="auto" Height="240" />
            <StackPanel Grid.Row="1" Orientation="Vertical" Width="auto" Height="auto">
                <Button x:Name="QuickPlayButton" Content="快速播放" />
                <ListView x:Name="QuickMusicList" >
                </ListView>
            </StackPanel>
        </Grid>

        <Grid RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="MymusicSubPanel" RelativePanel.RightOf="MymusicSubGrid" Margin="20">
            <ProgressBar x:Name="WaitingBar" IsIndeterminate="True" Loaded="WaitingBar_Loaded" />
            <ListView x:Name="AlbumsFlowControls" ItemsSource="{x:Bind AlbumFlowResources.View}" ItemTemplate="{StaticResource AlbumFlowTemplate}" IsItemClickEnabled="True" ItemClick="AlbumsFlowControls_ItemClick" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}" />
                        <Setter Property="Margin" Value="12,4,12,0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <local:AlbumFlowPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

        </Grid>


    </RelativePanel>
</Page>